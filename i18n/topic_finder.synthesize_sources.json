{
  "type"      : "object",
  "properties": {
    "topics": {
      "type" : "array",
      "items": {
        "type"      : "object",
        "properties": {
          "topic_name" : {
            "type": "string"
          },
          "topic_notes": {
            "type": "string"
          },
          "order"      : {
            "type"   : "integer",
            "minimum": 1,
            "maximum": 100
          },
          "word_count" : {
            "type"   : "integer",
            "minimum": 50,
            "maximum": 500
          },
          "sources"    : {
            "type" : "array",
            "items": {
              "type"      : "object",
              "properties": {
                "url": {
                  "type": "string"
                }
              },
              "required"  : [
                "url"
              ]
            }
          }
        },
        "required"  : [
          "topic_name",
          "topic_notes",
          "sources"
        ]
      }
    }
  }
}
